<div class="container d-flex flex-column align-items-center" style="height: 100vh;">
  <div class="d-flex justify-content-between mt-5" style="min-width: 300px;">

    <a role="button" href="/records/new" class="btn font-weight-bolder mr-2 text-white"
      style="background-color: lightcoral;" type="submit" id="new-button"><i class="fas fa-plus"></i>
      Expense</a>

    <div class="dropdown">
      <button class="btn dropdown-toggle mr-2 font-weight-bolder text-white" style="background-color: lightseagreen;"
        type="button" id="dropdownCategoryButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Category
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownCategoryButton">
        <a class="dropdown-item" href="/">all</a>
        <a class="dropdown-item" href="/records/search_by_category/home">home</a>
        <a class="dropdown-item" href="/records/search_by_category/transportation">transportation</a>
        <a class="dropdown-item" href="/records/search_by_category/entertainment">entertainment</a>
        <a class="dropdown-item" href="/records/search_by_category/food">food</a>
        <a class="dropdown-item" href="/records/search_by_category/others">others</a>
      </div>
    </div>

    <a role="button" href="/records/analysis" class="btn font-weight-bolder text-white"
      style="background-color: lightsalmon;" type="submit" id="new-button">
      Analysis</a>

  </div>

  <div class="mt-4 pt-3 d-flex align-items-baseline ">
    <h4 class="font-weight-bolder">Total Amount:
      <h1 class="text-warning ml-4 display-3 border-bottom">{{totalAmount}}</h1>
    </h4>
  </div>


  <ul class="list-group list-group-flush mt-4">
    {{#each records}}
    <li class=" list-group-item border-0" style="width: 800px;">
      <div class="row">
        <div class="mx-auto border-bottom col-10 row d-flex align-items-center"
          style="background-color:rgb(227, 243, 250); border-left: 5px solid lightseagreen;">
          <div class="col-3 d-flex flex-row align-items-center justify-content-around">
            <i class="text-muted font-weight-bolder mr-2">{{this.date}}</i>
            <i class="{{this.icon}} fa-2x"></i>
          </div>
          <div class=" col-9 d-flex justify-content-between align-items-center border-botton"
            style="background-color:rgb(252, 237, 190)">
            <h3>
              {{ this.name }}
            </h3>
            <h2>
              ${{ this.amount }}
            </h2>
          </div>
        </div>

        <div class="col-1">

          <a class="btn btn-outline-info mb-2" href="/records/{{ this._id }}/edit" style="width: 50px;"><i
              class="far fa-edit"></i></a>

          <form action="/records/{{ this._id }}?_method=DELETE" method="POST">

            <button title="delete" class="delete btn btn-outline-secondary" type="submit" style="width: 50px;"
              onclick="return confirm('Delete this expense!?')"><i class="far fa-trash-alt"></i></button>
          </form>

        </div>
      </div>
    </li>
    {{/each}}
  </ul>
</div>