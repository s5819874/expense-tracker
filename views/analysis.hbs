<div class="container mx-auto mt-5 d-flex flex-column align-items-center justify-content-around"
  style="background-color:rgb(252, 237, 190); width:700px; height:60vh; box-shadow:3px 3px 15px rgb(70, 70, 67);">

  <h1 class="text-center display-5 mt-4 text-secondary">Expense By Category</h1>
  <table class="table table-hover text-center bg-light mt-2">
    <thead style="background-color: NavajoWhite;">
      <tr>
        <th scope="col">Category</th>
        <th scope="col">Expense</th>
      </tr>
    </thead>
    <tbody>
      {{#each results}}
      <tr>
        <td>{{this._id}}</td>
        <td>{{this.totalAmount}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <div class="text-center">
    <button type="button" onclick="history.back()"
      class="btn btn-sm btn-secondary  font-weight-bolder mb-3">Back</button>
  </div>
</div>